/* pages/address/add.wxss */
page{
  background-color: #f0f0f0;
}

view{
  /* border: 1px solid red; */
}

.group{
  background-color: #fff;
}
.group-name{
  background-color: #f0f0f0;
  display: block;
  padding: 15rpx 20rpx;
}

.info-row:not(:last-child){
  border-bottom: 1rpx solid #ddd;
}
.multiple{

}
.info-row{
  padding: 15rpx 0;
  width: 90%;
  margin: 0 auto;
}
.info-row text{
  margin-left: 20rpx;
  display: inline-block;
  vertical-align: middle;
}
.info-row input{
  margin-left: 80rpx;
  display: inline-block;
  vertical-align: middle;
}
.info-row radio-group{
  text-align: center;
}
.info-row radio{
  margin-right: 40rpx;
  transform:scale(.9);
}
.info-row textarea{
  width: 100%;
  height: 100rpx;
  display: block;
  padding: 10rpx 0;
  margin-top: 15rpx;
  text-indent: 20rpx;
}
.option{
  margin-top: 40rpx;
}
.option button{
  margin: 20rpx 0;
}
.option-save{
  color: #fff;
  border-radius: 2rpx;
  background-color: #FF8C00;
}
.option-del{
  color: #fff;
  border-radius: 2rpx;
  background-color: red;
}
.city-selector{
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 999;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}
.city-selector picker-view{
  background-color: #fff;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 400rpx;
  text-align: center;
}
.city-selector picker-view-column{
  line-height: 50rpx;
}
.selector-option{
  background-color: #fff;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 400rpx;
  border-radius: 0;
  text-align: right;
  padding-right: 20rpx;
}