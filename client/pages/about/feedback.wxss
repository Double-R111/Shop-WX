.group{
  background-color: #fff;
}
.group-name{
  background-color: #f0f0f0;
  display: block;
  padding: 15rpx 20rpx;
}

.info-row:not(:last-child){
  border-bottom: 1rpx solid #ddd;
}
.multiple{

}
.info-row{
  padding: 15rpx 0;
  width: 90%;
  margin: 0 auto;
}
.info-row text{
  margin-left: 20rpx;
  display: inline-block;
  vertical-align: middle;
}
.info-row input{
  margin-left: 80rpx;
  display: inline-block;
  vertical-align: middle;
}
.info-row textarea{
  width: 100%;
  height: 400rpx;
  display: block;
  padding: 10rpx 0;
  margin-top: 15rpx;
  text-indent: 20rpx;
}
.option{
  margin-top: 20rpx;
}
.option button{
  margin: 20rpx 0;
}
.option-save{
  color: #fff;
  background-color: green;
}